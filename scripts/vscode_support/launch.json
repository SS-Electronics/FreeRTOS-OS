{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug STM32 (OpenOCD running separately)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/kernel.elf", 
            "miDebuggerPath": "gdb-multiarch",
            "miDebuggerServerAddress": "localhost:3333", 
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "setupCommands": [
                {
                    "description": "Load file",
                    "text": "file ./build/kernel.elf",
                    "ignoreFailures": true
                },
                {
                    "description": "Load to chip",
                    "text": "load",
                    "ignoreFailures": true
                },
                {
                    "description": "Reset ",
                    "text": "monitor reset halt",
                    "ignoreFailures": true
                },
                {
                    "description": "Break at main",
                    "text": "break main",
                    "ignoreFailures": true
                },
                {
                    "description": "Continue",
                    "text": "c",
                    "ignoreFailures": true
                }
            ],
            "logging": { "engineLogging": true }
        }
    ]
}
